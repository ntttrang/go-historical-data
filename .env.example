# Application Configuration
APP_NAME=historical-data-api
APP_ENV=development
APP_PORT=8080
APP_VERSION=1.0.0

# Server Configuration
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=120s
SERVER_SHUTDOWN_TIMEOUT=30s

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root_password
DB_NAME=historical_data
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Local

# Database Connection Pool
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=1h
DB_CONN_MAX_IDLE_TIME=10m

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_DURATION=1m

# CORS Configuration
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Request-ID
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Request Configuration
REQUEST_TIMEOUT=30s
MAX_BODY_SIZE=52428800

# CSV Upload Configuration
CSV_MAX_FILE_SIZE=52428800
CSV_BATCH_SIZE=1000

# Metrics Configuration (Prometheus)
METRICS_ENABLED=false
METRICS_PATH=/metrics

# Health Check Configuration
HEALTH_CHECK_PATH=/health

# Migration Configuration
MIGRATION_PATH=database/migrations
AUTO_MIGRATE=false

# Security Configuration
ENABLE_HTTPS=false
TLS_CERT_FILE=
TLS_KEY_FILE=

# Production Deployment (Docker Hub)
DOCKER_USERNAME=your_dockerhub_username
DOCKER_IMAGE_NAME=historical-data-api
DOCKER_TAG=latest

# Monitoring & Observability (Future)
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601

# Alerting (Future)
SLACK_WEBHOOK_URL=
EMAIL_ALERT_TO=
ALERT_THRESHOLD_ERROR_RATE=0.05
ALERT_THRESHOLD_RESPONSE_TIME=100ms
